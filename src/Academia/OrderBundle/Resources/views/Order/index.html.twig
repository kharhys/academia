{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Order list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Orderid</th>
                <th>Type</th>
                <th>Discipline</th>
                <th>Pages</th>
                <th>Deadline</th>
                <th>Instructions</th>
                <th>Citation</th>
                <th>Attachmentname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('u__show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.orderId }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.discipline }}</td>
                <td>{{ entity.pages }}</td>
                <td>{% if entity.deadline %}{{ entity.deadline|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.instructions }}</td>
                <td>{{ entity.citation }}</td>
                <td>{{ entity.attachmentName }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('u__show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('u__edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('u__new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
